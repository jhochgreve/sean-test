{% extends 'partials/base.html.twig' %}
{% block content %}
<section class="hero">
  <div class="content_top">
    {% for feature in page.header.homeHeroList %}
      <p>{{ feature.subtitle }}</p>
      <h1>{{ feature.title }}</h1>
    {% endfor %}
  </div>
  <div class="overlay_lite"></div>
</section>
<section class="sub_head">
  {% for feature in page.header.subheadingList %}
    <h3>{{ feature.copy }}</h3>
  {% endfor %}
</section>
<section class="sub_hero">
