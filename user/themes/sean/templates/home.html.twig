    <article class="sub_hero_article">
      <p>{{ feature.copy }}</p>
    </article>
    <div class="sub_hero_cta_wrap">
      <a href="{{ feature.buttonLink }}" class="sub_hero_cta">{{ feature.buttonText }}</a>
    </div>
    {% endfor %}
  </div>
  <div class="overlay_dark"></div>
</section>
